@model Book
@{
    ViewData["Title"] = "Book Details";
}
<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Category">Category</label>
                    @Html.DropDownList("CategoryID", (SelectList)ViewBag.CategoryID, "Select Category", new { @class = "form-control", @disabled = true })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="Views" class="form-label">Number of Views</label>
                    <input asp-for="Views" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <a asp-action="Read" asp-route-Id="@Model.Id" class="btn btn-info w-100 mt-4" target="_blank">View Book</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-light w-100 text-primary mt-4">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>