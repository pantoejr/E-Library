@model IEnumerable<IdentityRole>
@{
    int avRoleCount = 1;
}

<div class="card">
    <div class="card-header">
        Add Group Roles
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@avRoleCount</td>
                            <td>@role.Name</td>
                            <td>
                                <form asp-action="AddGroupRole" asp-controller="Groups" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" value="@ViewBag.GroupID" name="groupID" />
                                    <input type="hidden" value="@role.Id" name="roleID" />
                                    <button class="btn btn-primary">Add Role</button>
                                </form>
                            </td>
                        </tr>
                        avRoleCount++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
