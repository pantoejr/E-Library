@model Group
@{
    ViewData["Title"] = "Group Details";
}
<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <div class="form-group mb-4">
            <label class="form-label">Name</label>
            <input asp-for="Name" readonly class="form-control" />
        </div>
        <div class="form-group mb-4">
            <label class="form-label">Description</label>
            <input asp-for="Description" readonly class="form-control" />
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-light text-primary">Back To List</a>
        </div>
    </div>
</div>
<div class="row">
    <div id="avGroupRoles" class="col-md-6"></div>
    <div id="unAvGroupRoles" class="col-md-6"></div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#unAvGroupRoles").load("/Groups/UnAvGroupRoles/" + @Model.Id );
            $("#avGroupRoles").load("/Groups/AvGroupRoles/" + @Model.Id );
        })
    </script>
}