@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}
<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label mb-2">First Name</label>
                    <input asp-for="FirstName" class="form-control mb-2" />
                </div>
                <div class="col-md-6">
                    <label class="form-label mb-2">Last Name</label>
                    <input asp-for="LastName" class="form-control mb-2" />
                </div>
                <div class="col-md-6">
                    <label class="form-label mb-2">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control mb-2" />
                </div>
                <div class="col-md-6">
                    <label class="form-label mb-2">Email</label>
                    <input asp-for="Email" class="form-control mb-2" />
                </div>
                <div class="col-md-6">
                    <label class="form-label mb-2">Group</label>
                    @Html.DropDownList("GroupID", (SelectList)ViewBag.GroupID, "Select Group", new { @class = "form-control mb-2" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-primary w-100">Update</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-light text-primary w-100">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
