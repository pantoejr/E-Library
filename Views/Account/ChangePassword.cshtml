@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">@ViewData["Title"]</div>
            <div class="card-body">
                <form asp-action="ChangePassword" asp-controller="Account">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <input asp-for="OldPassword" class="form-control" placeholder="Current Password" required />
                    </div>
                    <div class="form-group mb-3">
                        <input asp-for="NewPassword" class="form-control" placeholder="New Password" required />
                    </div>
                    <div class="form-group mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" required />
                    </div>
                    <button class="btn btn-success w-100">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>